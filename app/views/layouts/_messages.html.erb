<div class='mdl-card width-full'>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <div class="mdl-card mdl-shadow--2dp mdl-shadow--2dp width-full alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
        <%= content_tag :div, msg, :id => "flash_#{name}", class: 'alert-text float-left' %>
        <i class="material-icons float-right" onclick="$('#<%= "flash_#{name}" %>').parent().remove();">close</i>
      </div>
    <% end %>
  <% end %>
</div>
